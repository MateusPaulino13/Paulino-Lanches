@model LanchesMac.ViewModels.PedidoLancheViewModel

@{
    ViewData["Title"] = "PedidoLanches";
    decimal totalPedidos = 0;
}

<h1>Lanches do Pedido</h1>

<hr/>

<h3>Pedido : @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h3>
<h3>Cliente : @Html.DisplayFor(model => @Model.Pedido.Nome)</h3>
<h3>Data : @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h3>
<h3>Entrega : @Html.DisplayFor(model => @Model.Pedido.PedidoEntregueEm)</h3>

<table class="table">
    @foreach(var item in @Model.Pedido.PedidoItens)
    {
        totalPedidos += (@item.Lanche.Preco * @item.Quantidade);

        <tr>
            <td align="right">
                <h3>@Html.DisplayFor(modelItem => item.Lanche.Nome)</h3>
            </td>
            <td align="right">
                <img src="@item.Lanche.ImagemUrl" class="img-fluid" style="width: 100px; height: 100px">
            </td>
            <td align="right">
                <h3>@string.Format("{0:C}", item.Lanche.Preco)</h3>
            </td>
            <td align="right">
                <h3>(@Html.DisplayFor(modelItem => item.Quantidade))</h3>
            </td>
        </tr>
    }

    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h3>Total do Pedido : @string.Format("{0:C}", @totalPedidos)</h3>
        </td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-outline-primary"Retornar para a lista de Pedidos></a>