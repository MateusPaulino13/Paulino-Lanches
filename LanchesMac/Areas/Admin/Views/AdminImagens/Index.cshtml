<table class="table" >
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" 
            asp-action="UploadFiles">
                <img src="~/images/Upload.png" width="200" height="150"/>
                <div class="form-group">
                    <div class="col-md-10">
                        <br />
                        <p>
                            <b>Selecione um ou mais arquivos para Enviar :</b>
                        </p>
                        <p>
                            (Arquivos com o mesmo nome serão sobrescritos)
                        </p>
                        <input type="file" name="files" multiple class="form-control-file"/>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" class="btn btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" 
            asp-action="GetImagens">
                <img src="~/images/viewFiles.png" width="200" height="150"/>
                <div class="form-group">
                    <div class="col-md-10">
                        <br/>
                        <p>
                            <strong>Visualizar Imagens na pasta do Servidor :</strong>
                        </p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Arquivos no Servidor" class="btn btn-outline-warning" />
                    </div>
                </div>
            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if(ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>